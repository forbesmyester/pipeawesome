{
  "commands": [
    {
      "name": "INPUT",
      "src": [ { "name": "FAUCET", "port": "OUT" } ],
      "spec": {
        "command": "awk",
        "env": { "POSIXLY_CORRECT": "1" },
        "path": ".",
        "args":  [ "{print NR  \": \" $s ; fflush()}" ]
      }
    },
    {
      "name": "GOOD",
      "src": [
        { "name": "INPUT", "port": "OUT" },
        { "name": "ADD_LEADING_ZERO", "port": "OUT" }
      ],
      "spec": { "command": "grep", "args": [ "--line-buffered", ".\\{6\\}\\:" ] }
    },
    {
      "name": "ADD_REQUIRE",
      "src": [
        { "name": "INPUT", "port": "OUT" }
      ],
      "spec": { "command": "sed", "args": [ "-u", "s/^\\([0-9]\\+\\).*/REQUIRE: \\1/" ] }
    },
    {
      "name": "TERMINATOR",
      "src": [
        { "name": "ADD_REQUIRE", "port": "OUT" },
        { "name": "GOOD", "port": "OUT" }
      ],
      "spec": { "command": "./target/debug/pipeawesome-terminator", "args": [ "-g", "5", "-r", "REQUIRE: ", "-l", "^0*([^:]+).*", "-p", "$1" ] }
    },
    {
      "name": "BAD",
      "src": [
        { "name": "INPUT", "port": "OUT" },
        { "name": "ADD_LEADING_ZERO", "port": "OUT" }
      ],
      "spec": { "command": "grep", "args": [ "--line-buffered", "-v", ".\\{6\\}\\:" ] }
    },
    {
      "name": "ADD_LEADING_ZERO",
      "src": [ { "name": "BAD", "port": "OUT" } ],
      "spec": { "command": "sed", "args": [ "-u", "s/^/0/" ] }
    }
  ],
  "outputs": {
    "OUTPUT": [ { "name": "TERMINATOR", "port": "OUT" } ]
  }
}
